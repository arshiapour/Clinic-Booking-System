
<h1>Patients List</h1>
<br/>
<table class="table table-hover table-striped">
  <thead class="table-light">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Appointment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
    <% if patient.user == current_user %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.email %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.appointment_id %></td>
        <td><%= link_to 'Show', patient %></td>
       <!-- <td><%= link_to 'Edit', edit_patient_path(patient) %></td> -->
        <td><%= link_to 'Delete', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path, class:"btn btn-secondary" %>
