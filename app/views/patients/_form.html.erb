<%= form_with(model: patient) do |form| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
        <% patient.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col field form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class:"form-control", placeholder:"ex: John" %>
    </div>

    <div class="col field form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class:"form-control", placeholder:"ex: Freeman" %>
    </div>
  </div>
  <div class="field form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control", placeholder:"ex: john@freeman.com" %>
  </div>

  <div class="field form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, class:"form-control", placeholder:"ex: 011 111 11111" %>
  </div>

  <div class="field form-group">
    <%= form.label :appointment_id %>
    <%# collection_select(:patient, :appointment_id, appointment.all, :id, {}, {:multiple => false}) %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :patient_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>

  <br/>

  <div class="actions">
    <%= form.submit "Proceed", class:"btn btn-success"%>
  </div>
<% end %>
