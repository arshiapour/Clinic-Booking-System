<%= form_with(model: appointment) do |form| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br/><br/>
  <div class="field form-group">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time, style:"form-control" %>
  </div>
  <br/>
  <div class="field form-group">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time, style:"form-control"  %>
  </div>
  <br/>
  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, style:"form-control"  %>
  </div>
  <br/>
  <div class="field form-group">
    <%# form.label :user_id %>
    <% if current_user.email == "admin@admin.com" %>
    <%= form.number_field :user_id, id: :appointment_user_id, value:current_user.id, type: :hidden %>
    <%end%>  
  </div>

  <div>
    <%= form.submit  class:"actions btn btn-success" %>
  </div>
<% end %>
